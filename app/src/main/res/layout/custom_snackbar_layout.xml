<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:contentPaddingBottom="14dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingTop="14dp"
    tools:cardBackgroundColor="@color/colorActivePrimary">

    <TextView
        android:id="@+id/custom_snackbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Subhead.Medium.WhiteColor"
        tools:text="Секундочку, гружусь..." />


</com.google.android.material.card.MaterialCardView>