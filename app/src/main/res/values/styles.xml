<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SearchBarStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_corner_shape</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:drawableStart">@drawable/ic_search_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Medium</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="TabStyle" parent="Widget.Material3.TabLayout">
        <item name="android:paddingStart">12dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">start</item>
        <item name="tabTextAppearance">@style/TextAppearance.Text.Medium</item>
        <item name="tabTextColor">@color/colorTextTertiary</item>
        <item name="tabSelectedTextColor">@color/colorTextPrimary</item>
        <item name="tabIndicatorColor">@color/colorActivePrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="CircleImageView">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/TextAppearance.Headline.Medium</item>
        <item name="buttonTint">@color/colorActivePrimary</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">19dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

